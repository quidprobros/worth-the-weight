                     status = 'success';
                     break;
                 case '<?=PayloadStatus::FAILURE?>':
                     status = 'warn';
                     break;
                 default:
                     status = 'info';
                     break;
             }

             const msg = $elt.data('notify-message');
             if (null != msg && null != status) {
                 $.notify(msg, status);
             }
         });

