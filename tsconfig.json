{
    "compilerOptions": {
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "CommonJS",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "./dist",
        "lib": ["dom","es2019"],
        "paths": {
            "@app/*":["./src/*"]
        },
        "types": ["node"],
        "typeRoots": [
            "./node_modules/foundation-sites/js/typescript"
        ]
    },
    "include": [
        "./src/"
    ]
}
