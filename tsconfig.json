{
    "compilerOptions": {
        "baseUrl": "./",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "CommonJS",
        "alwaysStrict": true,
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "outDir": "./dist",
        "lib": ["dom","es2019"],
        "paths": {
            "@app/*":["./src/*"]
        },
        "typeRoots": [
            "./src/@types/",
            "./node_modules/foundation-sites/js/typescript",
            "./node_modules/@types"
        ],
        "types": [
            "htmx.org",
            "foundation"
        ]
    },
    "allowSyntheticDefaultImports": true,
    "include": [
        "src/**/*"
    ]
}

