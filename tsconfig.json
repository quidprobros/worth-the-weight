{
    "compilerOptions": {
        "checkJs": false,
        "target": "es2017",
        "baseUrl": "./",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "CommonJS",
        "alwaysStrict": true,
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "outDir": "./dist",
        "lib": ["dom","es2019"],
        "paths": {
            "@app/*":["./src/*"]
        },
        "typeRoots": [
            "./src/@types/",
            "./node_modules/@types"
        ]
    },
    "allowSyntheticDefaultImports": true,
    "include": [
        "src/**/*"
    ]
}

